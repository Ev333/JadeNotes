{
  "compilerOptions": {
       "declaration": false,
       "module": "umd",
       "moduleResolution": "node",
       "removeComments": false,
       "target": "ES2015",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "noImplicitAny": false,
       "noEmitOnError": true,
       "baseUrl": "./src",
        "paths": {
          "jadenotes/webapp/*": ["./notes/*"],
          "jadenotes/lib/*": ["./lib/*"],
          "jadenotes/devserver/*": ["./devserver/*"],
          "jadenotes/electron-app/*": ["./electron-app/*"]
        }       
  },
  "include": [
    "./src/notes/**/*.ts",
    "./src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "ignore/**/*",
    "build/**/*"
  ]
}




