{
  "compilerOptions": {
       "declaration": false,
       "module": "ES2015",
       "moduleResolution": "node",
       "removeComments": false,
       "target": "ES2015",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "noImplicitAny": false,
       "noEmitOnError": true,
        "baseUrl": ".",
        "paths": {
            "webapp/*": ["src/webapp/*"],
            "lib/*": ["src/lib/*"],
            "devserver/*": ["src/devserver/*"],
            "electron-app/*": ["src/electron-app/*"]
        }    
  },
  "include": [
    "./src/notes/**/*.ts",
    "./src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "ignore/**/*",
    "build/**/*"
  ]
}




