{
  "compileOnSave": false,
  "compilerOptions": {
      "module": "amd",
      "moduleResolution": "node",
      "removeComments": false,
      "target": "ES2015",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "noEmitOnError": true,
      "rootDir": "./src",
      "outDir": "./build",
      "typeRoots": ["./typings"],
      "baseUrl": ".",
      "paths": {
          "web-app": "./src/notes",
          "electron-app": "./src/electron-app",
          "*": "./node_modules/*"
      }
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "typings",
    "build"
  ]
}
