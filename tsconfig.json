{
  "compileOnSave": false,
  "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "removeComments": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noEmitOnError": true,
      "allowJs": true,
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
          "webapp/*": ["src/webapp/*"],
          "lib/*": ["src/lib/*"],
          "devserver/*": ["src/devserver/*"],
          "electron-app/*": ["src/electron-app/*"]
      }
  },
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "ignore/**/*",
    "build/**/*",
    "dist/**/*"
  ]
}
