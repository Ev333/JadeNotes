{
  "compilerOptions": {
       "module": "commonjs",
       "moduleResolution": "node",
       "removeComments": false,
       "target": "ES2015",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "noImplicitAny": false,
       "noEmitOnError": true,
      "baseUrl": ".",
      "paths": {
          "webapp/*": ["src/webapp/*"],
          "lib/*": ["src/lib/*"],
          "devserver/*": ["src/devserver/*"],
          "electron-app/*": ["src/electron-app/*"]
      }    
  },
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "ignore/**/*",
    "build/**/*"
  ]
}