{
  "compilerOptions": {
       "module": "commonjs",
       "moduleResolution": "node",
       "removeComments": false,
       "target": "ES2015",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "noImplicitAny": false,
       "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "typings",
    "build"
  ]
}